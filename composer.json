{
    "name": "kynx/mezzio-authentication-apikey",
    "description": "Authenticate users with an API key in Mezzio applications",
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Matt",
            "email": "matt@kynx.org"
        }
    ],
    "require": {
        "php": "~8.2",
        "mezzio/mezzio-authentication": "^1.8",
        "psr/container": "^2.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.3",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-phpunit": "^0.18.4",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.13"
    },
    "autoload": {
        "psr-4": {
            "Kynx\\Mezzio\\Authentication\\ApiKey\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KynxTest\\Mezzio\\Authentication\\ApiKey\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
